<h4 class="display-6 m-4 shadow-sm h-auto w-25">部屋タイプ新規登録</h4>

   <%= form_with model: Room, url:admin_rooms_path, local:true do |f| %>

  <div class="container m-0">
   <div class="row-4">
    <div class="form-group mb-12 w-25 m-0">
      <label for="exampleFormControlInput1" class="form-label w-25 ms-1 my-3">画像</label>
       <div class="col-sm-10">
        <%= f.file_field :image, accept: "image/*", class: "custom-file-input" %>
        <label class="custom-file-label" data-browse="参照">ファイル選択...</label>
      </div>
     </div>

    <div class="form-group mb-12 w-25 m-0">
     <label for="exampleFormControlInput1" class="form-label w-50 ms-1 my-3">部屋タイプ名</label>
     <div class="w-70 mb-4 ms-4 em-4 mt-0">
      <%= f.text_field :name, value: @name, class: "form-control" %>
     </div>
    </div>

     <%= f.submit '▶新規登録', class:'btn btn-sm btn-success' %>
     <% end %>

  </div>
 </div>

<h4 class="display-6 m-4 shadow-sm h-auto w-25">部屋タイプ一覧</h4>
   <table class="table mx-3 my-3" style="width: 40%">
    <thead class="thead-light">
     <tr>
      <th scope="col">イメージ</th>
      <th scope="col">部屋タイプ名</th>
      <th></th>
     </tr>
  </thead>
   <tbody>
    <tr>
     <% @rooms.each do |room| %>
     <td><%= image_tag room.image, size: "60x60" %></td>
     <td><%= room.name %></td>
     <td><%= link_to "▶編集", edit_admin_room_path(room.id), class:'btn btn-sm btn-success' %></td>
    </tr>
   <% end %>
     </tbody>
    </table>