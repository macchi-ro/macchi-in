<h2>会員詳細</h2>

<table class="font-weight-bold mt-3 ml-5 small">
  <thead>
    <tr>
      <th></th>
      <th style="width: 400px"></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>

    <tr>
      <td>メール</td>
      <td><%= @customer.email %></td>
    </tr>

    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
    </tr>

    <tr>
      <td>氏名(カナ)</td>
      <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= @customer.address_number %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td>性別</td>
      <td><%= @customer.gender %></td>
    </tr>

    <tr>
      <td>年代</td>
      <td><%= @customer.age %>代</td>
    </tr>

    <tr>
      <td>ステータス</td>
      <td>
        <% if @customer.unsubscribe_status == true %>
            <div>退会</div>
        <% else %>
            <div>有効</div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to '▶会員一覧へ戻る', admin_customers_path %>