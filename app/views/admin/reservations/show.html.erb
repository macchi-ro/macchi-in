
<h2>予約詳細</h2>
    <%= link_to "▶予約を編集/削除", edit_admin_reservation_path(@reservation) %>
    <table>
     <tbody>
      <tr>
        <td>宿泊日</td>
        <td><%= @reservation.lodgment_date.strftime('%Y/%m/%d') %></td>
      </tr>

      <tr>
        <td>泊数</td>
        <td><%= @reservation.nights_number %>泊</td>
      </tr>

      <tr>
        <td>人数</td>
        <td><%= @reservation.count %>人</td>
      </tr>

      <tr>
        <td>室数</td>
        <td><%= @reservation.room_number %>室</td>
      </tr>

      <tr>
        <td>部屋タイプ</td>
        <td><%= @reservation.room.name %></td>
      </tr>

      <tr>
        <td>備考/要望</td>
        <td><%= @reservation.note %></td>
      </tr>

    </tbody>
   </table>

<!--顧客情報確認-->
<h2>お客様情報</h2>
    <table>
     <tbody>
      <tr>
        <td>メール</td>
        <td><%= @reservation.customer.email %></td>
      </tr>

      <tr>
        <td>氏名</td>
        <td><%= @reservation.customer.last_name %>  <%= @reservation.customer.first_name %></td>
      </tr>

      <tr>
        <td>氏名(カナ)</td>
        <td><%= @reservation.customer.last_name_kana %>  <%= @reservation.customer.first_name_kana %></td>
      </tr>

      <tr>
        <td>郵便番号</td>
        <td><%= @reservation.customer.address_number %></td>
      </tr>

      <tr>
        <td>住所</td>
        <td><%= @reservation.customer.address %></td>
      </tr>

    </tbody>
   </table>



      <label>プラン名</label>
      <div><%= @reservation.plan.name %><div>

      <label>合計料金(税込)</label>
      <div><%= (@reservation.plan.tax_excluded_fee * 1.1) * (@reservation.count) * (@reservation.room_number) * (@reservation.nights_number) .floor %>円</div>