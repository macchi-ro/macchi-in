<h4 class="display-6 m-4 shadow-sm h-auto w-25">部屋タイプ編集</h4>
     <!--エラーメッセーシ-->
     <% if @room.errors.any? %>
     <div class="alert alert-danger w-25 ml-3" role="alert">
       <ul>
         <% @room.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
      </div>
     <% end %>
  <%= form_with model: @room, url: admin_room_path(@room.id), method: :patch do |f| %>

  <div class="container m-0">
   <div class="row-4">
    <div class="form-group mb-12 w-25 m-0">
      <label for="exampleFormControlInput1" class="form-label w-25 ms-1 my-3">画像</label>
       <div class="col-sm-10">
        <%= f.file_field :image, accept: "image/*", class: "custom-file-input" %>
        <label class="custom-file-label" data-browse="参照">ファイル選択...</label>
      </div>
     </div>

    <div class="form-group mb-12 w-25 m-0">
     <label for="exampleFormControlInput1" class="form-label w-50 ms-1 my-3">部屋タイプ名</label>
     <div class="w-70 mb-4 ms-4 em-4 mt-0">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
     </div>

     <label for="exampleFormControlInput1" class="form-label w-50 ms-1 my-1">説明</label>
     <div class="w-100 mb-4 ms-4 em-4 mt-0">
      <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
     </div>
    </div>

     <%= f.submit '▶編集する', class:'btn btn-sm btn-success' %>
     <% end %>
     <%= link_to "▷編集を止める", admin_rooms_path, class:'btn btn-sm btn-danger px-2' %>
  </div>
 </div>
