<h2>プラン詳細</h2>
   <% if @plan.sales_status %>
     <span class="text-success">販売中</span>
     <% else @plan.sales_status %>
     <span class="text-secondary">販売停止中</span>
     <% end %>
  <div>
   <%= image_tag @plan.image, size: "200x200" %>
  </div>

      <table>

     <tbody>
      <tr>
        <td>プラン名</td>
        <td><%= @plan.name %></td>
      </tr>

      <tr>
        <td>税込金額(税抜)</td>
        <td><%= (@plan.tax_excluded_fee * 1.1).floor %>(<%= @plan.tax_excluded_fee %>)円</td>
      </tr>

      <tr>
        <td>素泊まり/食事付き</td>
        <td><%= @plan.meal_i18n %></td>
      </tr>

      <tr>
        <td>プラン説明</td>
        <td><%= @plan.description %></td>
      </tr>
    </tbody>
   </table>

      <%= form_with model: @reservation, url: plan_reservations_path(@plan), local: :true do |f| %>
      <%= f.hidden_field :plan_id, :value => @plan.id %>
      <% end %>
      <%= link_to "▶予約する", new_plan_reservation_path(@plan) %>
